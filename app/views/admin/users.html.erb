<h1>Users</h1>
<%= form_with(url: admin_users_path, method: :get, local: true) do |form| %>
  <%= form.label :search, "Search Users" %>
  <%= form.text_field :search %>
  <%= form.submit "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= link_to "Name", admin_users_path(sort: "name") %></th>
      <th><%= link_to "Email", admin_users_path(sort: "email") %></th>
      <th><%= link_to "Address", admin_users_path(sort: "address") %></th>
      <th><%= link_to "Role", admin_users_path(sort: "role") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= user.role %></td>
      </tr>
    <% end %>
  </tbody>
</table>